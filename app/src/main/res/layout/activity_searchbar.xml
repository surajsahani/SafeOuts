<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.safeout.customer.searchbar">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:onClick="userdetailsactivitya"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/home_logo" />

            <ImageView
                android:id="@+id/loc_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/loc" />
            <TextView
                android:id="@+id/location_txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/loc_img"
                android:layout_marginRight="20dp"
                android:text="Location"
                android:fontFamily="@font/maitree"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:textColor="#000"/>
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/horiz_line"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/checkbox_rect"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/horiz_line"
        android:id="@+id/search_layoutAct"
        android:layout_marginTop="5dp"
        android:layout_margin="20dp"
        android:background="@drawable/searchbg2"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Search restaurants nearby"
                android:id="@+id/search_edt_txt"
                android:background="#fff"
                android:fontFamily="@font/maitree"
                android:textSize="14sp"
                android:layout_centerVertical="true" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/search_img"
                android:padding="5dp"
                android:src="@drawable/ic_search_grey"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/search_img_bg"
                android:scaleType="center" />
        </RelativeLayout>
    </RelativeLayout>
