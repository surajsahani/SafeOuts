<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:openDrawer="start"
    tools:context="com.safeout.customer.MainActivity2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rel_lay"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                android:background="#fff"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/home_logo"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/home_logo" />

                    <ImageView
                        android:id="@+id/loc_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_baseline_location_on_24" />
                    <TextView
                        android:id="@+id/location_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/loc_img"
                        android:layout_marginRight="20dp"
                        android:text="Location"
                        android:fontFamily="@font/maitree"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:textColor="#000"/>
                </RelativeLayout>
            </com.google.android.material.appbar.MaterialToolbar>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/toolbar"
                android:id="@+id/search_layout"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:onClick="searchbaractivity"
                android:layout_marginRight="20dp"
                android:background="@drawable/searchbg2"
                android:layout_height="60dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search restaurants nearby "
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/maitree"
                        android:textSize="16sp"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_search_grey"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/search_img_bg"
                        android:scaleType="center" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/search_layout"
                android:id="@+id/layout2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurants Nearby "
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/inter"
                    android:textSize="15dp"
                    android:id="@+id/title"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/title"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/zomato_img"
                    android:onClick="zomato"
                    android:scaleType="center"
                    android:src="@drawable/zomato_txt"
                    android:background="@drawable/zomato_bg"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/zomato_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/swigy_img"
                    android:onClick="mswiggy"
                    android:scaleType="center"
                    android:src="@drawable/path945"
                    android:background="@drawable/swigy_bg"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/horiz_line29"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/layout2"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/checkbox_rect"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="190dp"
            android:layout_marginRight="10dp"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"
            android:id="@+id/offers_rv"/>

    </FrameLayout>



    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:id="@+id/messageRecyclerView"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent" />-->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        ads:headerLayout="@layout/nav_header"/>





</androidx.drawerlayout.widget.DrawerLayout>
