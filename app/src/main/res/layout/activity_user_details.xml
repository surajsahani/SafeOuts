<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity2">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFFFF">

        <ImageView
            android:id="@+id/logoXmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/image_text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:padding="3dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:textColor="#EA80FC"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userprofile"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:inputType="number"
            android:scrollHorizontally="false"
            android:textColor="#FF018786"
            android:textColorHint="#308570"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_below="@id/userprofile"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:textSize="28dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changephoneno"
        android:layout_width="match_parent"
        android:layout_below="@id/setting"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chang_phone_logo"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="#000000">
        </ImageView>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:onClick="changephone"
            android:text="Change email/phone no."
            android:textColor="#000000"
            android:textSize="28sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/privacy"
        android:layout_width="match_parent"
        android:layout_below="@id/changephoneno"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/privacy_logo"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:textColor="#000000"
            android:textSize="28dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/contact_tracing"
        android:layout_width="match_parent"
        android:layout_below="@id/privacy"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_loo"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Contact tracing"
            android:textColor="#000000"
            android:textSize="28dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/notificationlayout"
        android:layout_width="match_parent"
        android:layout_below="@id/contact_tracing"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/notification"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">
        </ImageView>
        <TextView
            android:id="@+id/notificationtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="notification"
            android:text="Notifications"
            android:textColor="#000000"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toEndOf="@+id/rate_logo"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/rating"
        android:layout_width="match_parent"
        android:layout_below="@id/notificationlayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rating1"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">
        </ImageView>
        <TextView
            android:id="@+id/notificationtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="rating"
            android:text="Rate our app"
            android:textColor="#000000"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toEndOf="@+id/rate_logo"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rate our app"
            android:textColor="#000000"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toEndOf="@+id/rate_logo"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:visibility="invisible"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/deletebutton"
        android:layout_width="match_parent"
        android:layout_below="@id/rating"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>
</RelativeLayout>