    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/search_layoutAct"
        android:id="@+id/layout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check These Out "
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/inter"
            android:textSize="20dp"
            android:id="@+id/title"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:id="@+id/zomato_img"
            android:scaleType="center"
            android:src="@drawable/zomato_txt"
            android:background="@drawable/zomato_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zomato_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:onClick="mswiggyS"
            android:id="@+id/swigy_img"
            android:scaleType="center"
            android:src="@drawable/path945"
            android:background="@drawable/swigy_bg" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@id/layout2"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"
            android:id="@+id/search_rv"/>
    </FrameLayout>
